<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.csbsju.nightlyfe.AccountActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/mUserHeader"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_centerHorizontal="true"
            android:text="Hello!"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            tools:text="Hello!"
            tools:textAlignment="center" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/mUserHeader"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp">

            <AutoCompleteTextView
                android:id="@+id/fChangeName"
                android:layout_width="75pt"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="48dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="26dp"
                android:hint="Change Name" />

            <AutoCompleteTextView
                android:id="@+id/fChangeLocation"
                android:layout_width="75pt"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/fChangeName"
                android:layout_alignStart="@+id/fChangeName"
                android:layout_below="@+id/fChangeName"
                android:layout_marginTop="31dp"
                android:hint="n/a" />

            <AutoCompleteTextView
                android:id="@+id/fChangePassword"
                android:layout_width="75pt"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/fChangeLocation"
                android:layout_alignStart="@+id/fChangeLocation"
                android:layout_below="@+id/changeLocationBtn"
                android:layout_marginTop="29dp"
                android:hint="Change Password" />

            <Button
                android:id="@+id/changeNameBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/fChangeLocation"
                android:layout_marginLeft="38dp"
                android:layout_marginStart="38dp"
                android:layout_toEndOf="@+id/fChangeName"
                android:layout_toRightOf="@+id/fChangeName"
                android:text="Submit" />

            <Button
                android:id="@+id/changeLocationBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/fChangeLocation"
                android:layout_alignBottom="@+id/fChangeLocation"
                android:layout_alignLeft="@+id/changeNameBtn"
                android:layout_alignStart="@+id/changeNameBtn"
                android:text="Submit" />

            <Button
                android:id="@+id/changePasswordBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/changeNameBtn"
                android:layout_alignRight="@+id/changeNameBtn"
                android:layout_alignTop="@+id/fChangePassword"
                android:text="Submit" />

            <TextView
                android:id="@+id/labelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/changeNameBtn"
                android:layout_alignLeft="@+id/fChangeName"
                android:layout_alignStart="@+id/fChangeName"
                android:text="Change Name" />

            <TextView
                android:id="@+id/labelLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/changeLocationBtn"
                android:layout_alignLeft="@+id/fChangeLocation"
                android:layout_alignStart="@+id/fChangeLocation"
                android:text="Change Location" />


            <TextView
                android:id="@+id/labelPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/changePasswordBtn"
                android:layout_alignLeft="@+id/fChangePassword"
                android:layout_alignStart="@+id/fChangePassword"
                android:text="Change Password" />

            <Button
                android:id="@+id/homeBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Return Home"
                android:layout_marginTop="35dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_above="@+id/deleteBtn" />

            <Button
                android:id="@+id/deleteBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Delete Account"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="?attr/colorError" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>