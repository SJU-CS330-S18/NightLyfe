<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.csbsju.nightlyfe.OwnerEditPosts">

    <TextView
        android:id="@+id/textView"
        android:layout_width="170dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:fontFamily="cursive"
        android:text=" Edit Post"
        android:textColor="@color/colorDark4"
        android:textSize="40sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="48dp" />

    <Button
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/deleteButton"
        android:layout_alignBottom="@+id/deleteButton"
        android:layout_alignLeft="@+id/editablePost"
        android:layout_alignStart="@+id/editablePost"
        android:text="Update"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="231dp" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editablePost"
        android:layout_alignRight="@+id/editablePost"
        android:layout_below="@+id/textView"
        android:layout_marginTop="106dp"
        android:text="Delete"
        tools:layout_editor_absoluteX="241dp"
        tools:layout_editor_absoluteY="231dp" />

    <EditText
        android:id="@+id/editablePost"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:ems="10"
        android:inputType="textMultiLine" />
</RelativeLayout>
