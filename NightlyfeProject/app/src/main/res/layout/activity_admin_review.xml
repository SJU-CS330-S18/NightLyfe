<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.csbsju.nightlyfe.AdminReview">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/mngReviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="Manage Reviews"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="140dp"
            tools:layout_editor_absoluteY="16dp" />

        <ScrollView
            android:id="@+id/businessScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp"
            android:layout_below="@+id/mngReviews"
            android:layout_above="@+id/homeBtn">

            <LinearLayout
                android:id="@+id/businessLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            </LinearLayout>

        </ScrollView>


    <Button
        android:id="@+id/homeBtn"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/businessScroll"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/mngReviews"
        android:text="Return Home"
        />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
